---
import Base from "../../layouts/Base.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Gallery from "../../components/Gallery.astro";

// Liste tes visuels (mets-les dans /public/images/illustrations/)
const images = [
  { src: "/images/illustrations/Black.png", alt: "Black / description 01" },
  { src: "/images/illustrations/Free.png", alt: "Titre / description 02" },
  { src: "/images/illustrations/oneLost.png", alt: "Titre / description 03" },
  { src: "/images/illustrations/Red.png", alt: "Titre / description 04" },
  { src: "/images/illustrations/thugLife.png", alt: "Titre / description 05" },
];

---
<Base title="Illustrations | Raynald">
  <Header />
  <main>
    <h2 style="max-width:1200px;margin:1rem auto 0;padding:0 1rem;">Illustrations</h2>
    <Gallery images={images} />
  </main>
  <Footer />
</Base>
